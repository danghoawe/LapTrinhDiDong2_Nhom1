<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:viewBindingIgnore="true"
    tools:ignore="ExtraText">
    tools:context=".DanhMuc_DialogFragment">
    <ImageView
        android:id="@+id/imgAnh"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/camera"/>
    <EditText
        android:layout_gravity="center"
        android:id="@+id/edtTenDanhMuc"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:hint="Tên Danh Mục"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background_v1"/>
    <android.widget.Button
        android:layout_gravity="center"
        android:id="@+id/btnThem"
        android:layout_margin="10dp"
        style="@style/button_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_green"
        android:text="Lưu danh mục"/>
    <android.widget.Button
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/btnXoa"
        android:layout_margin="10dp"
        style="@style/button_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_red"
        android:text="Xóa danh mục"/>
</LinearLayout>